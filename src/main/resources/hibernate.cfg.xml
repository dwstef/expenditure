<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>

        <!-- JDBC Database connection settings -->
        <property name="connection.driver_class">org.h2.Driver</property>
        <property name="connection.url">jdbc:h2:mem:expenditure</property>
        <property name="connection.username">sa</property>
        <property name="connection.password"></property>

        <!-- Select our SQL dialect -->
        <property name="dialect">org.hibernate.dialect.H2Dialect</property>

        <!-- Echo the SQL to stdout -->
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>

        <!-- Drop and re-create the database schema on startup -->
        <property name="hibernate.hbm2ddl.auto">create</property>

        <!-- dbcp connection pool configuration -->
        <mapping class="com.java.ds.expenditure.model.User"/>
        <mapping class="com.java.ds.expenditure.model.Loan"/>
        <mapping class="com.java.ds.expenditure.model.payments.Payment"/>
        <mapping class="com.java.ds.expenditure.model.period.Year"/>
        <mapping class="com.java.ds.expenditure.model.period.Month"/>

    </session-factory>
</hibernate-configuration>
